{
  "name": "domain-risk",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/domain/risk/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/domain/risk",
        "main": "libs/domain/risk/src/index.ts",
        "tsConfig": "libs/domain/risk/tsconfig.lib.json",
        "assets": ["libs/domain/risk/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/domain/risk/jest.config.ts"
      }
    }
  },
  "tags": ["scope:domain"]
}
