{
  "name": "jts-monorepo",
  "version": "1.0.0",
  "description": "Joohan Trading System - Automated Trading Platform with Multi-Broker Integration",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "packageManager": "yarn@4.9.4",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "scripts": {
    "setup": "yarn install && yarn prepare",
    "prepare": "husky",
    "parse:specs": "yarn exec ts-node scripts/parse-specs.ts",
    "generate:index": "yarn exec ts-node scripts/generate-index.ts",
    "sync:database": "yarn exec ts-node scripts/sync-database.ts",
    "sync:all": "yarn run parse:specs && yarn run generate:index && yarn run sync:database",
    "dev": "nx run-many --target=serve --all",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "test:affected": "nx affected --target=test",
    "lint": "eslint \"**/*.{js,ts}\" --fix",
    "lint:check": "eslint \"**/*.{js,ts}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "commitlint": "commitlint",
    "clean": "nx reset && rm -rf node_modules apps/*/node_modules libs/*/node_modules",
    "workspace:info": "yarn workspaces list",
    "deps:check": "yarn dlx npm-check-updates -u",
    "deps:upgrade": "yarn up -i"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@nx/workspace": "^17.0.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "axios": "^1.11.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ddoachi/jts-monorepo.git"
  },
  "keywords": [
    "trading",
    "microservices",
    "nestjs",
    "typescript",
    "monorepo"
  ],
  "author": "JTS Team",
  "license": "PRIVATE"
}
