{
  "name": "jts-monorepo",
  "version": "1.0.1",
  "description": "Joohan Trading System - Automated Trading Platform with Multi-Broker Integration",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "packageManager": "yarn@4.9.4",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "scripts": {
    "setup": "./scripts/development/setup-dev-env.sh",
    "setup:quick": "./scripts/development/setup-dev-env.sh --quick",
    "setup:deps": "yarn install && yarn prepare",
    "prepare": "husky",
    "parse:specs": "yarn exec ts-node scripts/utilities/parse-specs.ts",
    "generate:index": "yarn exec ts-node scripts/utilities/generate-index.ts",
    "sync:database": "yarn exec ts-node scripts/database/sync-database.ts",
    "sync:all": "yarn run parse:specs && yarn run generate:index && yarn run sync:database",
    "dev": "docker compose -f configs/docker/docker-compose.dev.yml up -d && nx run-many --target=serve --all",
    "dev:setup": "yarn setup",
    "dev:start": "docker compose -f configs/docker/docker-compose.dev.yml up -d",
    "dev:stop": "docker compose -f configs/docker/docker-compose.dev.yml down",
    "dev:restart": "yarn dev:stop && yarn dev:start",
    "dev:clean": "docker compose -f configs/docker/docker-compose.dev.yml down -v --remove-orphans",
    "dev:logs": "docker compose -f configs/docker/docker-compose.dev.yml logs -f",
    "dev:status": "docker compose -f configs/docker/docker-compose.dev.yml ps",
    "dev:health": "node scripts/development/check-services-health.js",
    "db:migrate": "yarn db:migrate:postgres && yarn db:migrate:clickhouse",
    "db:migrate:postgres": "yarn prisma migrate deploy",
    "db:migrate:clickhouse": "node scripts/migrate-clickhouse.js",
    "db:seed": "yarn db:seed:postgres && yarn db:seed:clickhouse",
    "db:seed:postgres": "yarn prisma db seed",
    "db:seed:clickhouse": "node scripts/seed-clickhouse.js",
    "db:reset": "yarn dev:clean && yarn dev:start && sleep 10 && yarn db:migrate && yarn db:seed",
    "services:start": "concurrently \"yarn start:gateway\" \"yarn start:strategy\" \"yarn start:risk\"",
    "start:gateway": "nx serve api-gateway",
    "start:strategy": "nx serve strategy-engine",
    "start:risk": "nx serve risk-management",
    "start:order": "nx serve order-execution",
    "start:market-data": "nx serve market-data-collector",
    "build": "nx run-many --target=build --all",
    "build:affected": "nx affected --target=build",
    "test": "nx run-many --target=test --all",
    "test:affected": "nx affected --target=test",
    "test:watch": "nx run-many --target=test --all --watch",
    "test:e2e": "nx run-many --target=e2e --all",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "lint:check": "eslint \"**/*.{js,ts}\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "nx run-many --target=type-check --all",
    "pre-commit": "lint-staged",
    "commitlint": "commitlint",
    "clean": "nx reset && rm -rf node_modules apps/*/node_modules libs/*/node_modules",
    "clean:all": "yarn clean && yarn dev:clean",
    "workspace:info": "yarn workspaces list",
    "deps:check": "yarn dlx npm-check-updates -u",
    "deps:upgrade": "yarn up -i",
    "env:validate": "node scripts/development/validate-env.js",
    "env:setup": "./scripts/development/setup-env.sh",
    "g:service": "nx g ./tools/generators:nestjs-service",
    "g:lib": "nx g ./tools/generators:jts-library",
    "generate:service": "nx g ./tools/generators/nestjs-service",
    "generate:library": "nx g ./tools/generators/jts-library",
    "workspace:clean": "nx reset && rm -rf dist tmp coverage .nx",
    "workspace:setup": "yarn install && yarn build",
    "workspace:reset": "yarn workspace:clean && yarn install",
    "analyze:deps": "nx graph",
    "analyze:affected": "nx affected:graph"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@nx/devkit": "17.3.2",
    "@nx/eslint": "17.3.2",
    "@nx/eslint-plugin": "^21.4.1",
    "@nx/jest": "^17.2.8",
    "@nx/js": "^17.2.8",
    "@nx/nest": "^17.2.8",
    "@nx/node": "^17.2.8",
    "@nx/workspace": "^17.2.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.5",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@swc-node/register": "~1.6.7",
    "@swc/core": "~1.3.85",
    "@swc/jest": "^0.2.39",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "axios": "^1.11.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "husky": "^9.1.7",
    "jest": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "lint-staged": "^16.1.5",
    "nx": "^17.2.8",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "tslib": "^2.3.0",
    "yaml": "^2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ddoachi/jts.git"
  },
  "keywords": [
    "trading",
    "microservices",
    "nestjs",
    "typescript",
    "monorepo"
  ],
  "author": "JTS Team",
  "license": "PRIVATE"
}
